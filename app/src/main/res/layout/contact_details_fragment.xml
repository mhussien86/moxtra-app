<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_margin="16dp">

        <TextView
            android:text="@string/contact_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contact_name_title"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contact_name"
            android:layout_weight="1"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_margin="16dp">

        <TextView
            android:text="@string/contact_email_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contact_email_title"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contact_email"
            android:layout_weight="1"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_margin="16dp">

        <TextView
            android:text="@string/contact_phone_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contact_phone_title"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contact_phone"
            android:layout_weight="1"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_margin="16dp">

        <Button
            android:text="@string/contact_chat_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chat_button"
            android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/meet_button"
            android:text="@string/contact_meet_text"
            android:layout_weight="1"/>

    </LinearLayout>
</LinearLayout>